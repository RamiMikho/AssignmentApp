<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="124dp">


    <TextView
        android:id="@+id/Score"
        android:layout_width="307dp"
        android:layout_height="41dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="@string/Score"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddScore"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="23dp"
        android:text="@string/AddScore"
        app:layout_constraintBottom_toTopOf="@+id/ReduceScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/ReduceScore"
        app:layout_constraintTop_toBottomOf="@+id/Score" />

    <Button
        android:id="@+id/ReduceScore"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/ReduceScore"
        app:layout_constraintBottom_toTopOf="@+id/Reset"
        app:layout_constraintEnd_toEndOf="@+id/Reset"
        app:layout_constraintStart_toStartOf="@+id/Reset"
        app:layout_constraintTop_toBottomOf="@+id/AddScore" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="104dp"
        android:text="@string/Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReduceScore" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="305dp"
        android:layout_height="158dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Score"
        app:srcCompat="@drawable/cookie" />


</androidx.constraintlayout.widget.ConstraintLayout>